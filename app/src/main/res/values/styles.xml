<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme">AppTheme</style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Background color -->
        <item name="android:background">@color/black</item>
        <!-- Text color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:background">@drawable/dialog_button_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize background color -->
        <item name="android:background">#3F3F3F</item>
        <!-- Customize text color -->
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>