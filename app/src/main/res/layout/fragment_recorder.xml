<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- Top Chronometer and status text -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <!-- Status text -->
        <TextView
            android:id="@+id/textRecStatus"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <!-- Chronometer -->
        <Chronometer
            android:id="@+id/timeRec"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Chronometer>

        <!-- VisualizerView to fill the remaining space -->
        <at.wifi.swdev.audiorecorderapp.WaveformVisualizerView
            android:id="@+id/visualizer_view_recorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Bottom Record button -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btnRec"
            android:background="@drawable/round_btn"
            android:clickable="true"
            android:src="@drawable/ic_microphone"
            android:scaleType="center"
            android:layout_margin="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageButton>

    </LinearLayout>

</LinearLayout>
